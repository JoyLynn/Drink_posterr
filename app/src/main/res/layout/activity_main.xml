<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/drink"
    android:focusableInTouchMode="false"
    android:background="@drawable/drinking1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Drink Poster"
        android:textAlignment="center"
        android:id="@+id/drinkposter"
        android:editable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Login"
        android:id="@+id/login"
        android:layout_marginTop="102dp"
        android:linksClickable="true"
        android:clickable="true"
        android:layout_below="@+id/drinkposter"
        android:layout_alignLeft="@+id/signup"
        android:layout_alignStart="@+id/signup" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Facebook"
        android:id="@+id/button"
        android:clickable="true"
        android:background="#ff6d75ff"
        android:layout_below="@+id/login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Google"
        android:id="@+id/google"
        android:background="#ffff463f"
        android:layout_below="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sign Up"
        android:id="@+id/signup"
        android:layout_marginTop="69dp"
        android:linksClickable="true"
        android:clickable="true"
        android:layout_below="@+id/google"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
